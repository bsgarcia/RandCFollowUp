%-------------------------------------------------------------------------
init;
%-------------------------------------------------------------------------

selected_exp = [6.2];
sessions = [0, 1];

displayfig = 'on';

figure('Renderer', 'painters',...
    'Position', [145,157,900,600], 'visible', 'on')

num = 0;
for exp_num = selected_exp
    num = num + 1;
    
    clear qvalues b pY2 ind_point Y
    
    idx1 = (exp_num - round(exp_num)) * 10;
    idx1 = idx1 + (idx1==0);
    sess = sessions(uint64(idx1));
    % load data
    name = char(filenames{round(exp_num)});
    
    data = d.(name).data;
    sub_ids = d.(name).sub_ids;
    nsub = d.(name).nsub;
       
    param = load(...
        sprintf('data/post_test_fitparam_ED_exp_%s', num2str(exp_num)));
    shift = param.shift;
          
    brickplot2(...
        shift',...
        orange_c.*ones(length(ev), 1),...
        [0, 1], 11,...
        '',...
        '',...
        '', varargin, 1, x_lim, x_values, .18);
    
    add_linear_reg(qvalues, ev, magenta_color);
    % --------------------------------------------------------------------
    % Compute for each symbol p of chosing depending on described cue value
    % -------------------------------------------------------------------
    
    pcue = unique(p2)';
    psym = unique(p1)';
    
    [corr, cho, out, p1, p2, ev1, ev2, ctch, cont1, cont2, dist, rtime] = ...
        DataExtraction.extract_estimated_probability_post_test...
        (data, sub_ids, idx, sess);
    
    for sub = 1:nsub
        i = 1;
        
        for p = unique(p1)'
            qvalues(sub, i) = cho(sub, (p1(sub, :) == p))./100;
            i = i + 1;
        end
    end
            
    ev = unique(p1);
    varargin = ev;
    x_values = ev;
    x_lim = [0, 1];
    
    brickplot2(...
        qvalues',...
        magenta_color.*ones(length(ev), 1),...
        [0, 1], 11,...
        '',...
        '',...
        '', varargin, 1, x_lim, x_values, .18);
    
    add_linear_reg(qvalues, ev, magenta_color);
    xlabel('Experienced cue win probability');
    box off
    hold on
    
    %set(gca, 'ytick', [0:10]./10);
    set(gca,'TickDir','out')
    
  
    clear pp p_lot p_sym temp err_prop prop i p1 p2 cho
  
end
